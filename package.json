{
	"name": "code-with-todoist",
	"displayName": "code with Todoist",
	"description": "Todoist plugin for vs code",
	"version": "0.3.0",
	"publisher": "Spoorthi",
	"icon": "media/extension_icon.png",
	"license": "SEE LICENSE IN LICENSE",
	"repository": "https://github.com/spoon611/code-with-todoist",
	"engines": {
		"vscode": "^1.44.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"todoist",
		"productivity"
	],
	"preview": true,
	"activationEvents": [
		"onView:projects"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "todoist.sync",
				"title": "Sync Todoist",
				"icon": {
					"light": "media/light_refresh.svg",
					"dark": "media/dark_refresh.svg"
				}
			},
			{
				"command": "todoist.closeTask",
				"title": "Mark task as done",
				"icon": {
					"light": "media/light_check.svg",
					"dark": "media/dark_check.svg"
				}
			},
			{
				"command": "todoist.addProject",
				"title": "Add Todoist Project",
				"icon": {
					"light": "media/light_add.svg",
					"dark": "media/dark_add.svg"
				}
			}
		],
		"configuration": [
			{
				"title": "Code With Todoist",
				"properties": {
					"code.todoist.api": {
						"type": "string",
						"description": "Todoist Integrations API token",
						"scope": "application"
					},
					"code.todoist.showTodaysTasks": {
						"type": "boolean",
						"default": true,
						"description": "Show today's tasks at the top of the sidebar",
						"scope": "application"
					},
					"code.todoist.useGitIgnore": {
						"type": "boolean",
						"default": true,
						"description": "Use .gitignore to ignore files during //TODO parsing (if it exists)",
						"scope": "application"
					}
				}
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "todoist.closeTask",
					"when": "view == task",
					"group": "navigation"
				},
				{
					"command": "todoist.sync",
					"when": "view == projects",
					"group": "navigation"
				},
				{
					"command": "todoist.addProject",
					"when": "view == projects",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "todoist.closeTask",
					"when": "view == projects && viewItem == todoistTask",
					"group": "inline"
				}
			]
		},
		"views": {
			"code-with-todoist": [
				{
					"id": "today",
					"name": "Today",
					"when": "showTodaysTasks"
				},
				{
					"id": "projects",
					"name": "Projects"
				},
				{
					"id": "task",
					"name": "Task",
					"when": "taskSelected"
				},
				{
					"id": "todos",
					"name": "Todos",
					"when": "workspaceOpen"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "code-with-todoist",
					"title": "Code with Todoist",
					"icon": "media/icon.svg"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "projects",
				"contents": "No projects were loaded.\n___\n1. Check if Todoist API token is set up in File > Preferences > Settings > Code With Todoist.\n\n2. Check if your internet connection is working.\n\n3. Check if your Todoist account has any projects. \n___\nClick refresh in the above toolbar to attempt resync."
			},
			{
				"view": "task",
				"contents": "No task was selected."
			},
			{
				"view": "today",
				"contents": "No tasks today. ðŸŽ‰"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.44.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.26.0",
		"@typescript-eslint/eslint-plugin": "^2.26.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.1",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"axios": "^0.19.2"
	}
}
